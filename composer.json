{
    "name": "asokol1981/abstract-mold",
    "description": "A base abstract class for centralizing all changes to an entity using user-provided data (mold pattern).",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": ">=8.1"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.75",
        "phpunit/phpunit": "^10.5.17 || ^11.0.7"
    },
    "autoload": {
        "psr-4": {
            "ASokol1981\\AbstractMold\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ASokol1981\\AbstractMold\\Tests\\": "tests/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
